{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "jsx": "react-jsx",
    "types": ["react", "react-dom"],

    "noEmit": true,
    "strict": false
  },
  "include": ["src"]
}
